{% requireAdmin %}

{% set plugin_handle = "update-tracker" %}

<style>

    .field {
        margin-bottom: 15px;
    }

    .field label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    .field input,
    .field select {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .instructions {
        font-size: 0.9em;
        color: #666;
        margin-top: 5px;
    }

    .errors {
        color: #d9534f;
        font-size: 0.9em;
        margin-top: 5px;
    }

    .button-container {
        text-align: right;
        margin-top: 20px;
    }
</style>

<div class="plugin-settings">
    <form method="post" accept-charset="UTF-8">
        {{ csrfInput() }}
        <input type="hidden" name="action" value="plugins/save-plugin-settings">
        <input type="hidden" name="pluginHandle" value="{{ plugin_handle }}">
        <input type="hidden" name="next_planned_email_timestamp" value="{{ settings['next_planned_email_timestamp'] }}">

        <div class="field{% if settings.getErrors('email') %} error{% endif %}">
            <label for="email">{{ "Email Address"|t }}</label>
            <p class="instructions">{{ ("This email will be used to send update notification emails."|t)|raw }}</p>
            <input type="email" id="email" name="email" value="{{ settings['email'] }}" required>
            {% if settings.getErrors('email') %}
                <ul class="errors">
                    {% for error in settings.getErrors('email') %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>

        <div class="field">
            <label for="version_type">{{ "Minimum Version Update to Track"|t }}</label>
            <p class="instructions">{{ ("Select the minimum update type you want to track."|t)|raw }}</p>
            <select id="version_type" name="version_type" required>
                <option value="Major" {% if settings['version_type'] == 'Major' %}selected{% endif %}>{{ "Major"|t }}</option>
                <option value="Minor" {% if settings['version_type'] == 'Minor' %}selected{% endif %}>{{ "Minor"|t }}</option>
                <option value="Patch" {% if settings['version_type'] == 'Patch' %}selected{% endif %}>{{ "Patch"|t }}</option>
            </select>
        </div>

        <div class="field">
            <label for="day_of_week">{{ "Notification Day"|t }}</label>
            <p class="instructions">{{ ("Choose which day you would like to receive update reports."|t)|raw }}</p>
            <select id="day_of_week" name="day_of_week" required>
                {% for day in ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'] %}
                    <option value="{{ day }}" {% if settings['day_of_week'] == day %}selected{% endif %}>{{ day|t }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="field">
            <label for="frequency">{{ "Notification Frequency"|t }}</label>
            <p class="instructions">{{ ("Select how often you want to receive notifications."|t)|raw }}</p>
            <select id="frequency" name="frequency" required>
                {% for freq in ['Daily', 'Weekly', 'Bi-weekly', 'Monthly'] %}
                    <option value="{{ freq }}" {% if settings['frequency'] == freq %}selected{% endif %}>{{ freq|t }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="button-container">
            <button type="submit" class="btn submit save-button">{{ "Save Settings"|t }}</button>
        </div>
    </form>
</div>
